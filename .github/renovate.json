{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "addLabels": [
    "renovate",
    "bot"
  ],
  "azure-pipelines": {
    "enabled": true,
    "fileMatch": ["\\.ya?ml$"]
  },
  "extends": [
    "config:recommended"
  ],
  "gitAuthor": "DBMH Renovate <renovate@dbmh.com>",
  "hostRules": [
    {
      "hostType": "github",
      "matchHost": "github.com",
      "repository": "https://github.com/*",
      "token": "${PAT}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "azure-pipelines-tasks"
      ],
      "enabled": true,
      "extractVersion": "^(?<version>\\d+)"
    },
    {
      "description": [
        "Automatically merge patch versions"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
      "automergeType": "pr"
    },
    {
      "description": [
        "Automatically merge minor versions"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": [
        "Do not automatically merge major versions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "description": [
        "Add package names to this array to exclude them from Renovate updates"
      ],
      "excludePackageNames": []
    }
  ]
}
